<h1>Show a book</h1>

<article>
    <ul>
        <% Object.entries(book).forEach(([key, value]) => { %>
            <% if (['_id', '__v'].includes(key) || !value) return %>
            <li><%= key %>: <%= value %></li>
        <% }) %>
    </ul>
</article>

